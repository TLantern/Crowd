rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile images - allow read for all, write for authenticated users only for their own profile
    match /profile_images/{userId}.jpg {
      // Anyone can read profile images
      allow read: if true;
      
      // Allow users to upload/update/delete their own profile image
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Event images - allow read for all, write for authenticated users
    match /event_images/{eventId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

