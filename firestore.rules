rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // Helper Functions (merged from both rule sets)
    // ============================================
    
    // Authentication helpers
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Admin check
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Expired event check
    function isExpired(ts) {
      // Event is expired if endsAt timestamp is in the past (no 1-hour buffer needed for cleanup)
      return ts != null && (
        (ts is timestamp && ts < request.time) ||
        (ts is number && ts < request.time.toMillis() / 1000)
      );
    }
    
    // Data validation helpers (from second rule set)
    function isValidUserDataForCreate() {
      return request.resource.data.keys().hasAll(['displayName', 'auraPoints', 'createdAt']) &&
             request.resource.data.displayName is string &&
             request.resource.data.auraPoints is int &&
             request.resource.data.createdAt is timestamp &&
             (!('updatedAt' in request.resource.data) || request.resource.data.updatedAt is timestamp) &&
             (!('interests' in request.resource.data) || request.resource.data.interests is list);
    }
    
    function isValidUserDataForUpdate() {
      // For updates/merges, validate fields that are present but don't require all fields
      return (!('displayName' in request.resource.data) || request.resource.data.displayName is string) &&
             (!('auraPoints' in request.resource.data) || request.resource.data.auraPoints is int) &&
             (!('createdAt' in request.resource.data) || request.resource.data.createdAt is timestamp) &&
             (!('updatedAt' in request.resource.data) || request.resource.data.updatedAt is timestamp) &&
             (!('interests' in request.resource.data) || request.resource.data.interests is list) &&
             (!('isVisible' in request.resource.data) || request.resource.data.isVisible is bool) &&
             (!('visibilityExpiresAt' in request.resource.data) || request.resource.data.visibilityExpiresAt is timestamp);
    }
    
    function isValidEventData() {
      return request.resource.data.keys().hasAll(['title', 'hostId', 'latitude', 'longitude', 'radiusMeters', 'createdAt', 'updatedAt']) &&
             request.resource.data.title is string &&
             request.resource.data.hostId is string &&
             request.resource.data.latitude is number &&
             request.resource.data.longitude is number &&
             request.resource.data.radiusMeters is number &&
             request.resource.data.createdAt is timestamp &&
             request.resource.data.updatedAt is timestamp &&
             (!('geohash' in request.resource.data) || request.resource.data.geohash is string) &&
             (!('peopleCount' in request.resource.data) || request.resource.data.peopleCount is int);
    }
    
    function isValidSignalData() {
      return request.resource.data.keys().hasAll(['userId', 'eventId', 'signalStrength', 'createdAt', 'updatedAt']) &&
             request.resource.data.userId is string &&
             request.resource.data.eventId is string &&
             request.resource.data.signalStrength is int &&
             request.resource.data.createdAt is timestamp &&
             request.resource.data.updatedAt is timestamp &&
             (!('latitude' in request.resource.data) || request.resource.data.latitude is number) &&
             (!('longitude' in request.resource.data) || request.resource.data.longitude is number) &&
             (!('geohash' in request.resource.data) || request.resource.data.geohash is string) &&
             (!('peopleCount' in request.resource.data) || request.resource.data.peopleCount is int) &&
             (!('color' in request.resource.data) || request.resource.data.color is string) &&
             (!('radiusMeters' in request.resource.data) || request.resource.data.radiusMeters is int);
    }
    
    function isValidPointData() {
      return request.resource.data.keys().hasAll(['userId', 'points', 'reason', 'createdAt', 'updatedAt']) &&
             request.resource.data.userId is string &&
             request.resource.data.points is int &&
             request.resource.data.reason is string &&
             request.resource.data.createdAt is timestamp &&
             request.resource.data.updatedAt is timestamp;
    }
    
    // ============================================
    // Collection Rules (keeping all from current + adding points)
    // ============================================
    
    // Official events collection
    match /events/{eventId} {
      allow read: if true;
      allow create, delete: if false; // Only Cloud Functions can create/delete
      // Allow anyone (including unauthenticated) to update attendeeCount and signalStrength (for joining)
      // Prevent hosts from joining their own events
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendeeCount', 'signalStrength'])
                    && (!isAuthenticated() || request.auth.uid != resource.data.hostId);
    }
    
    // User-created events collection
    match /userEvents/{eventId} {
      // Anyone can read events
      allow read: if true;
      
      // Authenticated users (including anonymous) can create events
      allow create: if isAuthenticated()
                    && request.resource.data.hostId == request.auth.uid
                    && isValidEventData();
      
      // Delete allowed for:
      // - the host
      // - an admin (document exists at admins/{uid})
      // - any authenticated user if the event has expired (endsAt < request.time - 1h)
      allow delete: if isAuthenticated() && (
                      resource.data.hostId == request.auth.uid ||
                      isAdmin() ||
                      isExpired(resource.data.endsAt)
                    );
      
      // Users can update their own events OR update attendeeCount/signalStrength when joining
      allow update: if isAuthenticated() && (
        // Host can update their own events
        (resource.data.hostId == request.auth.uid && isValidEventData())
      );
      
      // Allow anyone (including unauthenticated) to join by updating attendeeCount/signalStrength
      // Prevent hosts from joining their own events
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendeeCount', 'signalStrength'])
                    && (!isAuthenticated() || request.auth.uid != resource.data.hostId);
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read any user profile
      allow read: if true;
      
      // Users can create their own profile OR create with just visibility fields
      allow create: if isOwner(userId) && isValidUserDataForCreate();
      
      // ✅ ALSO allow creating user doc with ONLY visibility fields (for setData merge on non-existent doc)
      allow create: if request.resource.data.keys().hasOnly(['isVisible', 'visibilityExpiresAt']);
      
      // ✅ Allow ALL updates for testing visibility
      allow update: if true;
      
      allow delete: if isOwner(userId);
    }
    
    // Signals collection (event attendance)
    match /signals/{signalId} {
      // Anyone can read signals
      allow read: if true;
      
      // Anyone (including unauthenticated) can create signals, but authenticated users must match userId
      // Prevent hosts from creating signals for their own events
      allow create: if isValidSignalData()
                    && (!isAuthenticated() || request.resource.data.userId == request.auth.uid)
                    && (!isAuthenticated() || !exists(/databases/$(database)/documents/userEvents/$(request.resource.data.eventId)) 
                        || request.auth.uid != get(/databases/$(database)/documents/userEvents/$(request.resource.data.eventId)).data.hostId)
                    && (!isAuthenticated() || !exists(/databases/$(database)/documents/events/$(request.resource.data.eventId)) 
                        || request.auth.uid != get(/databases/$(database)/documents/events/$(request.resource.data.eventId)).data.hostId);
      
      // Anyone (including unauthenticated) can update signals
      allow update: if isValidSignalData()
                    && (!isAuthenticated() || resource.data.userId == request.auth.uid);
      
      allow delete: if (
        // Authenticated user's own signal
        (isAuthenticated() && resource.data.userId == request.auth.uid) ||
        // Or signal for an expired event (cleanup)
        (resource.data.eventId != null && 
         exists(/databases/$(database)/documents/userEvents/$(resource.data.eventId)) &&
         isExpired(get(/databases/$(database)/documents/userEvents/$(resource.data.eventId)).data.endsAt)) ||
        (resource.data.eventId != null && 
         exists(/databases/$(database)/documents/events/$(resource.data.eventId)) &&
         isExpired(get(/databases/$(database)/documents/events/$(resource.data.eventId)).data.endsAt))
      );
    }
    
    // Event chat messages collection
    match /eventChats/{eventId}/messages/{messageId} {
      // Authenticated users can read messages
      allow read: if isAuthenticated();
      
      // Authenticated users can create messages (including anonymous users)
      // Allow if user is authenticated and the userId matches the auth uid
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'userName', 'text', 'timestamp']);
      
      // Users can only update/delete their own messages
      allow update, delete: if isAuthenticated()
                            && resource.data.userId == request.auth.uid;
    }
    
    // Campus events live collection (read-only for users)
    match /campus_events_live/{eventId} {
      allow read: if true;
      // Allow delete of expired campus events for admins only
      allow delete: if isAdmin() && isExpired(resource.data.endsAt);
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Parties collection (events_from_linktree_raw) - read-only for users
    match /events_from_linktree_raw/{partyId} {
      allow read: if true;
      // Only Cloud Functions can write
      allow write: if false;
    }
    
    // Official school events collection (events_from_official_raw) - read-only for users
    match /events_from_official_raw/{eventId} {
      allow read: if true;
      // Only Cloud Functions can write
      allow write: if false;
    }
    
    // User attendances collection (tracking which events users are attending)
    match /userAttendances/{attendanceId} {
      // Anyone can read attendances
      allow read: if true;
      
      // Anyone (including unauthenticated) can create attendances, but authenticated users must match userId
      // Prevent hosts from creating attendances for their own events
      allow create: if (!isAuthenticated() || request.resource.data.userId == request.auth.uid)
                    && (!isAuthenticated() || !exists(/databases/$(database)/documents/userEvents/$(request.resource.data.eventId)) 
                        || request.auth.uid != get(/databases/$(database)/documents/userEvents/$(request.resource.data.eventId)).data.hostId)
                    && (!isAuthenticated() || !exists(/databases/$(database)/documents/events/$(request.resource.data.eventId)) 
                        || request.auth.uid != get(/databases/$(database)/documents/events/$(request.resource.data.eventId)).data.hostId);
      
      // Users can delete their own attendances
      // OR delete attendances for expired events (for cleanup)
      allow delete: if (
        // Authenticated user's own attendance
        (isAuthenticated() && resource.data.userId == request.auth.uid) ||
        // Or attendance for an expired event (cleanup)
        (resource.data.eventId != null && 
         exists(/databases/$(database)/documents/userEvents/$(resource.data.eventId)) &&
         isExpired(get(/databases/$(database)/documents/userEvents/$(resource.data.eventId)).data.endsAt)) ||
        (resource.data.eventId != null && 
         exists(/databases/$(database)/documents/events/$(resource.data.eventId)) &&
         isExpired(get(/databases/$(database)/documents/events/$(resource.data.eventId)).data.endsAt))
      );
      
      // No updates allowed (create/delete only)
      allow update: if false;
    }
    
    // Party "I'm Going" collection (tracking which users clicked "I'm Going" for parties)
    match /partyGoing/{goingId} {
      // Anyone can read going records (to display counts)
      allow read: if true;
      
      // Authenticated users can create their own going records
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.partyId != null;
      
      // Users can delete their own going records
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
      
      // No updates allowed (create/delete only)
      allow update: if false;
    }
    
    // Activity logs collection (for DAU tracking)
    match /activity_logs/{date}/events/{eventId} {
      // Authenticated users can create events (for logging their actions)
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;
      
      // Only admins can read activity logs
      allow read: if isAdmin();
      
      // No updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Metrics collection (for aggregated DAU data)
    match /metrics/{document=**} {
      // Only admins can read metrics
      allow read: if isAdmin();
      
      // Only Cloud Functions can write (no auth check allows server-side writes)
      allow write: if false;
    }
    
    // Anchors collection (location-based map pins)
    match /anchors/{anchorId} {
      // Anyone can read anchors (public data)
      allow read: if true;
      
      // Authenticated users can write anchors (for syncing geocoded coordinates)
      allow write: if isAuthenticated();
    }
    
    // Anchor notification logs collection (for deduplication)
    match /anchor_notification_logs/{logId} {
      // Authenticated users can read logs (to check for duplicates)
      allow read: if isAuthenticated();
      
      // Authenticated users can write logs (to mark notifications as sent)
      allow write: if isAuthenticated();
    }
    
    // Points collection (from second rule set)
    match /points/{pointId} {
      // Users can read their own points
      allow read: if isOwner(resource.data.userId);
      
      // System can create points (via Cloud Functions)
      allow create: if isValidPointData();
      
      // System can update points (via Cloud Functions)
      allow update: if isValidPointData();
      
      // Points are typically not deleted, but allow system deletion
      allow delete: if false; // Prevent manual deletion of points
    }
  }
}
